@using Booking.Domain.Model.Enums
@model Booking.Business.Models.Request.FlightSearchRequest


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Search Flights</h1>
<br />
<br />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Search">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DepartureId" class="control-label">Departure</label>
                <select asp-for="DepartureId" asp-items="Html.GetEnumSelectList<CityEnum>()">
                    <option selected="selected" value="">Please select</option>
                </select>
                <span asp-validation-for="DepartureId" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="DestinationId" class="control-label">Destination</label>
                <select asp-for="DestinationId" asp-items="Html.GetEnumSelectList<CityEnum>()">
                    <option selected="selected" value="">Please select</option>
                </select>
                <span asp-validation-for="DestinationId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NoStops" class="control-label">Direct flight</label>
                <input asp-for="NoStops" asp-items="Html.CheckBoxFor(m => m.NoStops)" />
            </div>

            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />
<br />
<br />
<table class="table">
    <thead>
        <tr>
            <th>Departure</th>
            <th>Destination</th>
            <th>Date/Time</th>
            <th>Stop Number</th>
            <th>Seat Number</th>
        </tr>
    </thead>
    <tbody id="flightTableBody"></tbody>
</table>


<div>
    <a asp-action="ReturnToMain">Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}