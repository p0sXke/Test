@model Booking.Business.Models.Dto.BookedFlightDto

@{
    ViewData["Title"] = "ApproveReject";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Approve/Reject</h1>

<div>
    <h4>Booked Flight</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FlightDeparture)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FlightDeparture)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FlightDestination)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FlightDestination)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FlightDateTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FlightDateTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FlightStopNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FlightStopNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FlightSeatNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FlightSeatNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserProfileFullName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserProfileFullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserProfileEmail)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserProfileEmail)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BookSeats)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BookSeats)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BookingStatus)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BookingStatus)
        </dd>
    </dl>
</div>

<div>
    <div class="row">
        <form asp-action="ApproveBooking">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Approve" class="btn btn-primary" />
        </form>     |
        <form asp-action="RejectBooking">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Reject" class="btn btn-danger" />
        </form>
    </div>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>